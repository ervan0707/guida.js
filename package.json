{
  "name": "guida.js",
  "version": "0.2.0",
  "type": "module",
  "description": "A modern, lightweight onboarding library with spotlight highlighting and smooth animations",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:lib dev:web",
    "dev:lib": "vite build --watch",
    "dev:web": "cd web && npm run dev",
    "build": "npm run clean && npm run typecheck && vite build --mode production",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "web": "cd web && npm run dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "onboarding",
    "tutorial",
    "walkthrough",
    "spotlight",
    "guided-tour",
    "user-experience",
    "typescript",
    "javascript"
  ],
  "author": "Ervan",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.7.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^24.0.0",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ervan0707/guida.js"
  },
  "bugs": {
    "url": "https://github.com/ervan0707/guida.js/issues"
  },
  "homepage": "https://github.com/ervan0707/guida.js#readme"
}
